rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own profile images
    match /user/images/{userId}_{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write supply images
    match /supplies/images/{productCode}_{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow admins to read all images
    match /{allPaths=**} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}